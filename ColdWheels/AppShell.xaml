<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ColdWheels.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ColdWheels"
    Shell.FlyoutBehavior="Flyout"
    Title="ColdWheels"
    xmlns:Views="clr-namespace:ColdWheels.Views"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False"
    >

    <Shell.FlyoutHeader>
        <StackLayout>
        <Label Text="ColdWheels"
               FontSize="30"
               />
        <Label Text="Usuário"/>
        </StackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Cadastro"
            ContentTemplate="{DataTemplate Views:pgCadCarro}" 
            />
        <ShellContent 
            Title="Visualizar"
            ContentTemplate="{DataTemplate Views:pgVisCarro}"
            />
        
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Label Text="Versão: 1.0.0.0"/>
    </Shell.FlyoutFooter>
</Shell>
