<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColdWheels.Views.pgCadCarro"
             Title="pgCadCarro">
    <ScrollView>
    <StackLayout>
        <Label 
            Text="Cadastro"/>
        
        <Image Source="dotnet_bot.png"
               HeightRequest="200"
               x:Name="carroImg"/>
        <!--Adicionar a foto do carro em questao
        gerar um imagePicker-->
        <Label Text="Nome:"/>
        <Entry Placeholder="Nome"
               x:Name="txtNome"/>

        <Label Text="Lote:"/>
        <Entry Placeholder="Lote"
               x:Name="txtLote"/>
    
        <Label Text="Ano:"/>
        <Entry Placeholder="Ano"
               x:Name="txtAno"/>

        <Label Text="Obtido"/>
        <CheckBox x:Name="ckbObtido"/>

        <Label Text="Desejado"/>
        <CheckBox x:Name="ckbDesejado"/>

        <Button Text="Salvar"
                x:Name="btnSalvar"
                Clicked="btnSalvar_Clicked"/>
        
    </StackLayout>
    </ScrollView>
</ContentPage>