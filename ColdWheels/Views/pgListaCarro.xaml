<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColdWheels.Views.pgListaCarro"
             Title="pgListaCarro">
    <StackLayout>
        <Label Text="Filtrar por:"/>
        <Entry Placeholder="Nome:"
               x:Name="txtFiltroNome"/>
        <Image
            Source="car.png"
            x:Name="imgObtido"
            HeightRequest="30"
            WidthRequest="30">
            <Image.GestureRecognizers>
                <TapGestureRecognizer 
                    Tapped="tapFiltrarObtido_Tapped"
                    CommandParameter="{Binding .}"/>
            </Image.GestureRecognizers>
        </Image>

        <Image
            Source="heart.png"
            x:Name="imgDesejado"
            HeightRequest="30"
            WidthRequest="30">
            <Image.GestureRecognizers>
                <TapGestureRecognizer 
            Tapped="tapFiltrarDesejado_Tapped"
            CommandParameter="{Binding .}"/>
            </Image.GestureRecognizers>
        </Image>

        <Button Text="Filtrar"
                x:Name="btnFiltrar"
                Clicked="btnFiltrar_Clicked"/>

        <ListView x:Name="lsvLista">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame CornerRadius="10"
                               Padding="10"
                               Margin="5"
                               BackgroundColor="#414142">
                            <StackLayout Orientation="Horizontal">
                                <StackLayout Padding="10"
                                             HorizontalOptions="Fill">
                                    <Image Source="{Binding DirImagem}"
                                           HeightRequest="50"
                                           WidthRequest="50"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding Id}"/>
                                    <Label Text="{Binding Nome}"
                                           FontAttributes="Bold"
                                           FontSize="20"/>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Lote: "/>
                                        <Label Text="{Binding Lote}"
                                               Margin="5, 0"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Ano: "/>
                                        <Label Text="{Binding Ano}"
                           Margin="5, 0"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Obtido:"/>
                                        <Label Text="{Binding Lote}"
                           Margin="5, 0"/>

                                        <Image Source="heart.png"
                       HeightRequest="30"
                       WidthRequest="30">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer 
                            Tapped="tapDeletar_Tapped"
                            CommandParameter="{Binding .}"/>
                                            </Image.GestureRecognizers>
                                        </Image>

                                        <Image Source="car.png"
                       HeightRequest="30"
                       WidthRequest="30">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer 
                            CommandParameter="{Binding .}"/>
                                            </Image.GestureRecognizers>
                                        </Image>

                                        <Image Source="delete.png"
                       HeightRequest="30"
                       WidthRequest="30">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer 
                            Tapped="tapDeletar_Tapped"
                            CommandParameter="{Binding .}"/>
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout HorizontalOptions="End"
                                             Padding="5"
                                             Orientation="Horizontal">
                                    <Image Source="icon_eye.png"
                                           HeightRequest="30"
                                           WidthRequest="30">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                CommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Image Source="icon_trash.png"
                                           HeightRequest="30"
                                           WidthRequest="30">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Tapped="tapDeletar_Tapped"
                                                CommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>